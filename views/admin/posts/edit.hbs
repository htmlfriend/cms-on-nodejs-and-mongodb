<h1>Edit Post</h1>

<form action="/admin/posts/edit/{{post.id}}?_method=PUT" method="post">

	<div class="form-group">
		<label for="title">Title</label>
		<input class="form-control" type="text" name="title" id="title" value="{{post.title}}">
	</div>


	<div class="form-group">
		<label for="status">Status</label>
		<select name="status" id="status" class="form-control">
			{{#select post.status}}
			<option value="public">Public</option>
			<option value="private">Private</option>
			<option value="draft">Draft</option>
			{{/select}}
		</select>
	</div>
	<div class="form-group form-check">
		<input type="checkbox" id="exampleCheck" name="allowComments" {{#if post.allowComments}} checked {{/if}}>
		<label class="form-check-label" for="exampleCheck">Allows Comments</label>
	</div>
	<div class="form-group">
		<label for="body">Body</label>
		<textarea class="form-control" name="body" id="body" cols="30" rows="10" resize="no">{{post.body}}</textarea>
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>
