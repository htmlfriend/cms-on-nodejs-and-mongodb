<div class="row">
	<div class="col-sm-4">
		<h1>Edit Category</h1>
		<form action="/admin/categories/edit/{{category.id}}?_method=PUT" method="POST">

			<div class="form-group">
				<label for="name">Name</label>
				<input type="text" name="name" id="" class="form-control" placeholder="enter title" value="{{category.name}}">
