<div class="row">
	<!-- Post Content Column -->
	<div class="col-lg-8">
		<!-- Title -->
		<h1 class="mt-4">{{post.title}}</h1>

		<!-- Author -->
		<p class="lead">
			by
			<a href="#">{{post.user.firstName}} {{post.user.lastName}}</a>
		</p>

		<hr>
		<!-- Date/Time -->
		<p>Posted on {{generateTime date "MMMM Do YYYY"}}</p>

		<hr>

		<!-- Preview Image -->
		{{#if post.file}}
		<img src="/uploads/{{post.file}}" alt="image" class="img-fluid rounded">
		{{else}}
		<img src="http://placehold.it/750x300" alt="image" class="img-fluid rounded">
		{{/if}}
		<hr>

		<!-- Post Content -->

		<p>{{post.body}}</p>

		<hr>


		{{#if user}}

		{{#if post.allowComments}}

		<!-- Comments Form -->
		<div class="card my-4">
			<h5 class="card-header">Leave a Comment:</h5>
			<div class="card-body">
				<form action="/admin/comments" method="post">
					<div class="form-group">
						<textarea name="body" class="form-control" rows="3"></textarea>

						<input type="hidden" value="{{post.id}}" name="id">
					</div>
					<button type="submit" class="btn btn-primary">Submit</button>
				</form>
			</div>
		</div>

		{{else}}

		<h2>Comments not allowed for this</h2>

		<br>
		<p>This post has a private option</p>
		<hr>


		{{/if}}


		{{else}}

		You need to login to comment <a href="/login">Login</a>

		<br>
		<hr>

		{{/if}}



		{{#each post.comments}}


		<!-- Single Comment -->
		<div class="media mb-4">
			<img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="avatar">
			<div class="media-body">
				<h5 class="mt-0">{{user.firstName}} {{user.lastName}}</h5>

				{{body}}

			</div>
		</div>

		{{/each}}

	</div>


	{{> sidebar}}
</div>
<!-- /.row -->
